# 資料庫配置 (Vercel 部署時使用 PostgreSQL)
# 本地開發使用 SQLite
DATABASE_URL="file:./dev.db"
# Vercel 部署使用 PostgreSQL (在 Vercel 控制台設置)
# DATABASE_URL="postgresql://username:password@host:port/database?schema=public"

# 應用配置
NEXT_PUBLIC_APP_NAME="GoSky AI Chatbot"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
# Vercel 部署時使用實際域名
# NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"

# 環境配置
NODE_ENV="development"
# Vercel 部署時設置為 production
# NODE_ENV="production"

# API 配置
API_SECRET_KEY="your-secret-key-here"

# 機器人配置
CHATBOT_WELCOME_MESSAGE="您好！我是您的智能客服助手，有什麼可以幫助您的嗎？"
CHATBOT_FALLBACK_MESSAGE="抱歉，我沒有理解您的問題。請聯繫人工客服獲得幫助。"

# 工作時間配置
WORKING_HOURS_START="09:00"
WORKING_HOURS_END="18:00"
TIMEZONE="Asia/Taipei"

# 通知配置
ENABLE_NOTIFICATIONS=true
NOTIFICATION_EMAIL="admin@example.com"

# Vercel 特定配置
# 如果需要繞過部署保護 (不推薦用於生產環境)
# VERCEL_PROTECTION_BYPASS="your-bypass-token"
